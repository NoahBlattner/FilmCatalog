<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:text="@string/txt_title"
        android:textSize="@dimen/txt_title_size"
        android:textAlignment="center"
        android:textColor="@color/light_grey"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_spacing"
        app:startIconDrawable="@drawable/ic_round_search_24"
        app:startIconTint="@color/light_grey"
        app:hintTextColor="@color/light_grey"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_filter"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_filter_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:background="@color/colorSecondaryVariant"
            android:hint="@string/edit_hint_filter"
            android:textColorHint="@color/light_grey"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        style="@style/Theme.FilmCatalog.Button.LeftFlat"
        android:id="@+id/btn_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_spacing"
        android:backgroundTint="@color/colorSecondaryVariant"
        app:icon="@drawable/ic_round_search_24"
        app:iconTint="@color/light_grey"
        app:iconSize="34dp"
        app:iconGravity="end"
        app:layout_constraintStart_toEndOf="@id/edit_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edit_filter"
        app:layout_constraintBottom_toBottomOf="@id/edit_filter"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>